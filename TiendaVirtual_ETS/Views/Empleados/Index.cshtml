@model IEnumerable<TiendaVirtual_ETS.Models.Empleado>

@{
    ViewBag.Title = "Index";
}

<h2>Indice Empleados</h2>

<p>
    @Html.ActionLink("Crear nuevo Empleado", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoDocumento.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpleadoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
