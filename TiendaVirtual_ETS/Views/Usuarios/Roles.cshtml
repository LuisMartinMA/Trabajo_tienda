@model TiendaVirtual_ETS.ViewModels.UsuarioViewModels
@{
    ViewBag.Title = "Roles";
}

<h2>Roles Para Usuario: @Model.Nombre</h2>


<p>
    @Html.ActionLink("Agregar Roles", "AgregarRoles", new { usuarioID = Model.UsuarioID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Eliminar Roles", "EliminarRoles", new { usuarioID = Model.UsuarioID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-info" })
</p>

<table class="table">

    @for (var i = 0; i < Model.Roles.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Roles[i].Nombre)
            </td>
       
            <td>
              
                @Html.ActionLink("Eliminar", "Eliminar", new { usuarioID = Model.UsuarioID, rolID = Model.Roles[i].RolID })


            </td>
        </tr>
    }

</table>
