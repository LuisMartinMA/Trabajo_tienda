@model TiendaVirtual_ETS.ViewModels.UsuarioViewModels

@{
    ViewBag.Title = "AgregarRoles";
}

<h2>Agregar Roles a Usuario: @Model.Nombre</h2>
<h3>@ViewBag.Error</h3>


@using (Html.BeginForm("AgregarRoles", "Usuarios", new { usuarioID=Model.UsuarioID},FormMethod.Post))

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">




        <div class="form-group">
            @Html.LabelFor(model => model.Rol.RolID, "RolID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RolID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Rol.RolID, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- CREACION DE BOTON -->

        @Html.ActionLink("Regresar a Usuario", "Roles", new { usuarioID = Model.UsuarioID }, new { @class = "btn btn-info" })
        <input type="submit" value="Agregar Roles" class=" btn btn-success" />



    </div>

}




